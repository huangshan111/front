extends ../layout
block content
    .container
        .row
            form.form-horizotal(method="post",action="/login")
                .form-group
                    lable.col-sm-2.control-lable(for="inputTitle") 用户名
                    .col-xs-4
                        input#inputTitle.form-control(type="text",name="user[name]",value="")
                .form-group
                    lable.col-sm-2.control-lable(for="inputDoctor") 密码
                    .col-xs-4
                        input#inputDoctor.form-control(type="password",name="user[password]",value="")
                .form-group
                    .col-sm-offset-2.col-xs-4
                    button.btn.btn-default(type="submit") 登录
                    a.btn.btn-default(href='/') 取消