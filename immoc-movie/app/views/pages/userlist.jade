extends ../layout
block content
    .container
        .row
            table(class="table table-striped")
                each user in users
                    tr
                        td=user.name
                        td=user.createAt
                        td=user.updateAt
                        td
                            a(href="/detail/#{user._id}",class="btn") 查看
                            a(href="/update/#{user._id}",class="btn") 编辑
                            a.del.btn(data-id="#{user._id}") 删除
            a.btn(href="/admin/create") 添加