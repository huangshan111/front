doctype html
html
    head
        meta(charset='utf-8')
        title #{title}
        include ./includes/head
    body
        include ./includes/header
        block content

        nav.navbar.navbar-default.navbar-fixed-bottom(role="navigation")
            .container
                if user
                    span #{user.name},欢迎您
                    a(href='/logout') 登出
                else
                    a(href='/login') 登陆
                    a(href='/register') 注册
        .modal.fade#login(tabindex="-1",role="dialog" ,aria-labelledby="myModalLabel", aria-hidden="true")
            .modal-dialog
                .modal-content
                    form.form-horizotal(method="post",action="/login")
                        .modal-header
                            button(type="button", class="close" ,data-dismiss="modal")
                                span(aria-hidden="true") X
                                span.sr-only 关闭
                            h4.modal-title#myModalLabel 请登录
                        .modal-body
                            .form-group
                                lable.col-sm-2.control-lable(for="inputTitle") 用户名
                                .col-sm-10
                                    input#inputTitle.form-control(type="text",name="user[name]",value="")
                                .form-group
                                    lable.col-sm-2.control-lable(for="inputDoctor") 密码
                                    .col-sm-10
                                        input#inputDoctor.form-control(type="text",name="user[password]",value="")
                        .modal-footer
                            button(type="button" ,class="btn btn-default" ,data-dismiss="modal") 取消
                            button(type="submit" ,class="btn btn-primary") 登录
        .modal.fade#register(tabindex="-1",role="dialog" ,aria-labelledby="myModalLabel", aria-hidden="true")
            .modal-dialog
                .modal-content
                    form.form-horizotal(method="post",action="/register")
                        .modal-header
                            button(type="button", class="close" ,data-dismiss="modal")
                                span(aria-hidden="true") X
                                span.sr-only 关闭
                            h4.modal-title#myModalLabel 注册页面
                        .modal-body
                            .form-group
                                lable.col-sm-2.control-lable(for="inputTitle") 用户名
                                .col-sm-10
                                    input#inputTitle.form-control(type="text",name="user[name]",value="")
                                .form-group
                                    lable.col-sm-2.control-lable(for="inputDoctor") 密码
                                    .col-sm-10
                                        input#inputDoctor.form-control(type="text",name="user[password]",value="")
                        .modal-footer
                            button(type="button" ,class="btn btn-default" ,data-dismiss="modal") 取消
                            button(type="submit" ,class="btn btn-primary") 注册

